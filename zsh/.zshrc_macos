# vi keybindings
bindkey -v

# Editor info
export EDITOR=vim
export VISUAL=vim

# Command Editor
autoload -z edit-command-line
zle -N edit-command-line
bindkey -M vicmd v "edit-command-line"

# Prompt
PROMPT="%F{green}%n %F{white}in %F{blue}%~ üåô %F{white}‚ùØ‚ùØ "
RPROMPT="%F{yellow}%* %F{magenta}%(?.‚àö.%?)"

# FZF fuzzy find history
source $HOME/.fzf.zsh

# nvm setup
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# aliases
alias vim="nvim"
alias DOTS="cd $HOME/dotfiles"
alias NV="cd $HOME/dotfiles/nvim/.config/nvim"
alias ll="ls -lah"
alias zrc="$EDITOR $HOME/dotfiles/zsh/.zshrc_macos"

# golang stuff
GOPATH="$HOME/go"
GOBIN="$GOPATH/bin"
export PATH=$PATH:$GOBIN

